<header>
  <h2>Are you sure you want to delete '<%= @host.name %>'?</h2>
</header>
<hr/>

<% if @error %>
  <div class="alert alert-danger" role="alert"><%= @error %></div>
<% end %>

<form class="form-horizontal" role="form" method="POST">
  <input type="submit" class="btn btn-danger" value="Delete Host"/>
  <a href="<%= "#{Minicron::Transport::Server.get_prefix}/host/#{@host.id}" %>" class="btn btn-info">Cancel</a>
</form>
